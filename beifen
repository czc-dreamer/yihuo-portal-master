                var itemVm = new Vue({
        el: "#itemApp",
        data: {
            ly,
            skus,
            commentList,
            userInfo,
            content:'',
            dataName:'',
            showComment:false
        },
        computed: {
            sku() {
                // const index = Object.values(this.index).join("-");
                return this.skus[0];
            },
            images() {
                return this.sku.image ? this.sku.image.split(",") : [''];
            },
            comments() {
                return this.commentList[0];
            },
            user(){
                return this.userInfo[0];
            },
        },
        created() {
            this.comment_reply();
        },
        components: {
            lyTop: () => import('/js/pages/top.js')
        },
        methods: {
            increment() {
                this.num++;
            },
            decrement() {
                if (this.num > 1) {
                    this.num--;
                }
            },
            comment_reply() {
                //1.先判断登录状态
                ly.verifyUser().then(res => {
                    //2.已经登录
                    leyou.http.get("/auth/verify").then(({data}) => {
                        this.showComment=true
                        console.log("返回值=" + data)
                        userId = data.id
                        return userId;
                    }).catch(() => {
                        console.log("查询失败")
                    })
                }).catch(() => {
                    //3.未登陆
                    console.log("请先登录")

                })
            },
            comment_login() {
                window.location.href = 'http://www.leyou.com/login.html'
            },
            comment_submit() {
                var content = $("#comment-content").val();
                if(content == ''){
                    alert('请输入评论内容！');
                    return;
                }
                var data = {'goods_id':1,'content':content,'user_id':userId};
                if($("#submit-comment-btn").attr('data-reply') != '0'){
                    data.replyTo = $("#submit-comment-btn").attr('data-reply',userId);
                    data.content = data.content.replace('回复：' + data.replyTo + ':','')
                    data.content = '回复：“' + $("#submit-comment-btn").attr('data-reply-content') + '”<br>' + data.content;
                }
                $.ajax({
                    type:'post',
                    url:"http://api.leyou.com/api/item/commentT",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    success:function (){
                        alert('评论成功');
                        // window.location.reload();
                }
                });
            },
            reply(content,dataName){
                this.content=content
                this.dataName=dataName

                console.log("content:"+this.content)
                console.log("dataName:"+this.dataName)
                $("#comment-content").val('回复：'+$(this).attr('data-name',this.dataName) + ':')
                $("#submit-comment-btn").attr('data-reply',$(this).attr('data-name',this.dataName))
                $("#submit-comment-btn").attr('data-reply-content',$(this).attr('data-reply',this.content))
            }
        }
    });